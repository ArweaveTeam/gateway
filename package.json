{
  "name": "@arweave/gateway",
  "version": "1.0.0",
  "description": "Arweave Gateway Prototype",
  "main": "src/gateway/app.ts",
  "scripts": {
    "graphql-types": "graphql-codegen --config codegen.yml",
    "build": "tsc && cp ./src/gateway/routes/graphql-v2/schema/types.graphql ./dist/gateway/routes/graphql-v2/schema/types.graphql",
    "migrate:latest": "knex migrate:latest",
    "migrate:up": "knex migrate:up",
    "migrate:down": "knex migrate:down",
    "dev": "npm run build && node dist/gateway/app.js",
    "docker:start": "docker-compose up --build -d",
    "docker:stop": "docker-compose down -v",
    "start": "npm run migrate:latest && node dist/gateway/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArweaveTeam/gateway.git"
  },
  "keywords": [
    "arweave",
    "gateway",
    "graphql",
    "typescript"
  ],
  "author": "Arweave Team <hello@arweave.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArweaveTeam/gateway/issues"
  },
  "homepage": "https://github.com/ArweaveTeam/gateway#README.md",
