{
  "name": "@arweave/gateway",
  "version": "0.3.0",
  "main": "dist/src/Gateway.js",
  "repository": "git@github.com:ArweaveTeam/gateway.git",
  "author": "Arweave <hello@arweave.org>",
  "license": "MIT",
  "scripts": {
    "dev:lint": "eslint src/*.ts src/**/*.ts migrations/*.ts knexfile.ts",
    "dev:gql": "npx graphql-codegen --config codegen.yml",
    "dev:build": "npm run dev:gql && tsc",
    "dev:start": "npm run dev:build && node dist/src/Gateway.js",
    "dev:restart": "npm run migrate:down && npm run migrate:latest && npm run dev:start",
    "dev:snapshot": "npm run dev:build && node dist/src/Snapshot.js",
    "dev:import": "npm run dev:build && node dist/src/Import.js",
    "migrate:down": "knex migrate:down",
    "migrate:up": "knex migrate:up",
    "migrate:latest": "knex migrate:latest",
    "migrate:reset": "knex migrate:down && knex migrate:latest",
    "docker:start": "docker-compose up --build -d",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all",
    "start": "npm run migrate:latest && node dist/src/Gateway.js"
  },
  "dependencies": {
    "apollo-server-express": "^2.19.2",
    "arweave": "^1.10.6",
    "arweave-bundles": "^1.0.3",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-fields": "^2.0.3",
    "knex": "^0.21.17",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "progress": "^2.0.3",
    "rfc4648": "^1.4.0",
    "shortid": "^2.2.16",
    "superagent": "^6.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.7",
    "@graphql-codegen/typescript": "1.17.7",
    "@graphql-codegen/typescript-resolvers": "1.17.7",
    "@types/event-stream": "^3.3.34",
    "@types/express": "^4.17.11",
    "@types/graphql-fields": "^1.3.3",
    "@types/lodash": "^4.14.168",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.22",
    "@types/progress": "^2.0.3",
    "@types/shortid": "^0.0.29",
    "@types/superagent": "^4.1.10",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-google": "^0.14.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
