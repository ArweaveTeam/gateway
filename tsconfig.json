{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["esnext"],
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "downlevelIteration": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
  ]
}